<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:tools="http://schemas.android.com/tools"
	android:clipChildren="false">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/coverTitleHelper"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="20dp"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.cardview.widget.CardView
			android:id="@+id/playlistCoverCard"
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:cardCornerRadius="6dp"
			app:layout_constraintDimensionRatio="w,1:1"
			app:layout_constraintEnd_toStartOf="@+id/coverGuide"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<ImageView
				android:id="@+id/playlistCover"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/ic_note_twocolor" />

		</androidx.cardview.widget.CardView>

		<androidx.constraintlayout.widget.Guideline
			android:id="@+id/coverGuide"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent=".40" />

		<EditText
			android:id="@+id/playlistNameEditText"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:background="@android:color/transparent"
			android:hint="@string/playlist_name"
			android:inputType="textLongMessage|none"
			android:minLines="2"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/playlistCoverCard"
			app:layout_constraintTop_toTopOf="parent" />

	</androidx.constraintlayout.widget.ConstraintLayout>


	<View
		android:id="@+id/divider1"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginTop="16dp"
		android:layout_marginStart="16dp"
		android:background="@drawable/divider_horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/coverTitleHelper" />

	<EditText
		android:id="@+id/playlistDescriptionEditText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="24dp"
		android:layout_marginEnd="20dp"
		android:layout_marginBottom="24dp"
		android:hint="@string/playlist_description"
		android:inputType="textLongMessage|none"
		android:minLines="2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/divider1"
		app:layout_constraintBottom_toTopOf="@id/modeHolder"
		android:background="@android:color/transparent"/>



	<LinearLayout
		android:id="@+id/modeHolder"
		android:layout_width="wrap_content"
		android:layout_height="72dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/playlistDescriptionEditText"
		android:orientation="vertical">

		<View android:layout_width="match_parent"
			android:layout_marginStart="16dp"
			android:layout_height="1dp"
			android:background="@drawable/divider_horizontal" />

		<LinearLayout
			android:id="@+id/addSongsHolder"
			android:paddingStart="16dp"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="?selectableItemBackground"
			android:clickable="true"
			android:visibility="gone">

			<TextView
				android:id="@+id/addSongsTV"
				android:layout_width="match_parent"
				android:layout_height="72dp"
				android:layout_marginEnd="8dp"
				android:autoSizeTextType="uniform"
				android:paddingVertical="20dp"
				android:text="@string/add_music"
				android:textSize="20sp"
				android:drawableStart="@drawable/select_mode_add"
				android:drawablePadding="12dp"
				android:paddingStart="4dp"
				android:textColor="?android:attr/colorPrimary"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/playlistControls"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:paddingVertical="6dp"
			android:paddingHorizontal="16dp">

			<ImageButton
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="match_parent"
				android:src="@drawable/play_pause_selector"
				android:scaleType="fitCenter"
				android:padding="10dp"/>

			<Space
				android:layout_width="16dp"
				android:layout_height="match_parent"/>

			<ImageButton
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:src="@drawable/ic_shuffle"
				app:tint="?android:attr/colorControlNormal"
				android:scaleType="fitCenter"
				android:padding="10dp"/>

		</LinearLayout>


	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>