<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="TransparentBottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.DayNight.BottomSheetDialog">
		<item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
		<item name="android:windowCloseOnTouchOutside">true</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:backgroundDimAmount">0.3</item>
		<item name="android:windowIsFloating">true</item>
	</style>

	<style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="AlphaInfoDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
		<item name="android:windowBackground">#0000</item>
		<item name="windowNoTitle">true</item>
		<item name="android:layout_marginHorizontal">32dp</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowCloseOnTouchOutside">true</item>
		<item name="android:backgroundDimAmount">0.15</item>
	</style>

	<style name="SlidingDialogAnimation">
		<item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
		<item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
	</style>

	<style name="FullscreenDialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowActionBar">true</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowCloseOnTouchOutside">false</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>

	<style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
		<item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
		<item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
		<item name="background">?attr/colorPrimary</item>
		<item name="android:layout_height">?attr/actionBarSize</item>
		<item name="android:iconTint">?attr/colorControlNormal</item>
	</style>
</resources>
