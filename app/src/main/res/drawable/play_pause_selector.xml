<selector xmlns:android="http://schemas.android.com/apk/res/android"
	android:enterFadeDuration="@android:integer/config_shortAnimTime"
	android:exitFadeDuration="@android:integer/config_shortAnimTime">
	<item android:state_selected="true" android:state_pressed="true">
		<inset android:inset="1dp" android:drawable="@drawable/ic_pause"/>
	</item>
	<item android:state_selected="true" android:drawable="@drawable/ic_pause"/>
	<item android:state_pressed="true">
		<inset android:inset="1dp" android:drawable="@drawable/ic_play"/>
	</item>
	<item android:drawable="@drawable/ic_play"/>
</selector>